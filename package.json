{
  "name": "agir-back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "GNU AFFERO GENERAL PUBLIC LICENSE",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "db:update": "dotenv -e .env.test -- npx prisma migrate dev && dotenv -e .env.run -- npx prisma migrate dev && npm run db:update-stats",
    "db:update-stats": "dotenv -e .env.test -- npx prisma migrate dev  --schema ./src/infrastructure/prisma/stats/schema.prisma && dotenv -e .env.run -- npx prisma migrate dev  --schema ./src/infrastructure/prisma/stats/schema.prisma",
    "db:update_tests": "dotenv -e .env.test -- npx prisma migrate dev",
    "db:generate": "dotenv -e .env.test -- npx prisma migrate dev --create-only",
    "db:generate-stats": "dotenv -e .env.test -- npx prisma migrate dev --create-only --schema ./src/infrastructure/prisma/stats/schema.prisma",
    "db:status": "dotenv -e .env.test -- npx prisma migrate status",
    "db:up": "docker-compose up -d",
    "db:destroy": "docker-compose down",
    "build": "npx prisma generate --schema ./src/infrastructure/prisma/stats/schema.prisma && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/src/main.js",
    "start:dev": "dotenv -e .env.run -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "dotenv -e .env.test -- jest --runInBand --bail",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:cov": "dotenv -e .env.test -- jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:int": "dotenv -e .env.test -- jest ./test/integration/ALL.int-spec.ts --config ./test/jest-int.json --runInBand --bail --forceExit",
    "test:api": "dotenv -e .env.test -- jest --config ./test/jest-api.json --runInBand --bail",
    "test:ext": "dotenv -e .env.test -- jest --config ./test/jest-ext.json --runInBand --bail",
    "test:repo": "dotenv -e .env.test -- jest --config ./test/jest-repo.json --runInBand --bail",
    "test": "npm run test:unit && npm run test:int",
    "load": "npm run loadtest",
    "prepare": "husky install",
    "kube:start": "minikube start && npm run kube:env",
    "kube:stop": "minikube stop",
    "kube:env": "eval $(minikube docker-env)",
    "scripts:images": "node scripts/generate-images.mjs",
    "execute_local": "dotenv -e .env.run -- node dist/src/console.js",
    "execute": "node dist/src/console.js"
  },
  "dependencies": {
    "@betagouv/aides-velo": "^0.4.1",
    "@betagouv/publicodes-voiture": "^0.3.7",
    "@etalab/decoupage-administratif": "^5.0.0",
    "@getbrevo/brevo": "^2.2.0",
    "@incubateur-ademe/nosgestesclimat": "^3.6.2",
    "@nestjs/common": "^11.0.17",
    "@nestjs/core": "^11.0.17",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.17",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.1.3",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.6.0",
    "@publicodes/tools": "^1.7.2",
    "@sentry/node": "^9.12.0",
    "axios": "^1.8.4",
    "firebase-admin": "^13.2.0",
    "handlebars": "^4.7.8",
    "markdown-it": "^14.1.0",
    "publicodes": "^1.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript-retry-decorator": "^2.4.2",
    "uuid": "^11.1.0",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.17",
    "@types/express": "^5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "cloudinary": "^2.6.0",
    "dotenv-cli": "8.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prisma": "^6.6.0",
    "sharp": "^0.34.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 20000
  },
  "prisma": {
    "schema": "src/infrastructure/prisma/schema.prisma"
  }
}
