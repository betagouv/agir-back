// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./prisma_client_stats"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_STATS_URL")
}

model UtilisateurCopy {
  user_id                String    @id
  compte_actif           Boolean
  revenu_fiscal          Int?
  nombre_parts_fiscales  Decimal?  @db.Decimal(4, 2)
  date_derniere_activite DateTime? @db.Timestamptz(3)
  nombre_points          Int?      @default(0)
  code_postal            String?
  nom_commune            String?
  code_insee_commune     String?
  code_departement       String?
  source_inscription     String?
  rang_national          Int?
  rang_commune           Int?
  date_inscription       DateTime? @db.Timestamptz(3)
  version_utilisateur    String?
}

model Personnalisation {
  user_id                       String   @id
  perso_alimentation_done_once  Boolean  @default(false)
  perso_transport_done_once     Boolean  @default(false)
  perso_logement_done_once      Boolean  @default(false)
  perso_consommation_done_once  Boolean  @default(false)
  tags_exclusion                String[]
  actions_rejetees_all          String[]
  actions_alimentation_rejetees String[]
  actions_logement_rejetees     String[]
  actions_transport_rejetees    String[]
  actions_consommation_rejetees String[]
}

model BilanCarbone {
  user_id                              String   @id
  total_kg                             Int
  transport_kg                         Int
  alimentation_kg                      Int
  logement_kg                          Int
  consommation_kg                      Int
  pourcentage_progression_total        Int      @default(0)
  pourcentage_progression_alimentation Int      @default(0)
  pourcentage_progression_transport    Int      @default(0)
  pourcentage_progression_logement     Int      @default(0)
  pourcentage_progression_consommation Int      @default(0)
  created_at                           DateTime @default(now()) @db.Timestamptz(3)
  updated_at                           DateTime @updatedAt @db.Timestamptz(3)
}

model KYCCopy {
  code_kyc              String
  cms_id                String
  user_id               String
  question              String
  thematique            String
  derniere_mise_a_jour  DateTime? @db.Timestamptz(3)
  type_question         String
  reponse_texte         String?
  reponse_entier        Int?
  reponse_decimal       String?
  reponse_unique_code   String?
  reponse_multiple_code String[]  @default([])

  @@unique([user_id, code_kyc])
}

model ActionCopy {
  type_code_id String
  code_action  String
  cms_id       String
  type_action  String
  user_id      String
  titre        String
  thematique   String
  vue_le       DateTime? @db.Timestamptz(3)
  faite_le     DateTime? @db.Timestamptz(3)
  feedback     String?
  like_level   Int?

  @@unique([user_id, type_code_id])
}

model ArticleCopy {
  cms_id      String
  user_id     String
  titre       String
  thematique  String
  lu_le       DateTime? @db.Timestamptz(3)
  like_level  Int?
  est_favoris Boolean?

  @@unique([user_id, cms_id])
}

model AideCopy {
  cms_id                      String
  user_id                     String
  titre                       String
  thematiques                 String[]
  vue_le                      DateTime? @db.Timestamptz(3)
  clicked_infos               Boolean?
  clicked_demande             Boolean?
  sera_sollicitee_utilisateur Boolean?
  est_connue_utilisateur      Boolean?
  feedback                    String?
  like_level                  Int?

  @@unique([user_id, cms_id])
}

model QuizzCopy {
  cms_id            String
  user_id           String
  titre             String
  thematique        String
  bon_premier_coup  Boolean?
  nombre_tentatives Int?
  date_premier_coup DateTime? @db.Timestamptz(3)
  like_level        Int?

  @@unique([user_id, cms_id])
}
